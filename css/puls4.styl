gris_oscuro = #444
azul = #22BCE0
naranja = #DD4F24
gris_texto = #7A7A7A

@font-face {
	font-family: 'iconitos';
	src:url('../fonts/icomoon.eot');
	src:url('../fonts/icomoon.eot?#iefix') format('embedded-opentype'),
		url('../fonts/icomoon.ttf') format('truetype'),
		url('../fonts/icomoon.woff') format('woff'),
		url('../fonts/icomoon.svg#icomoon') format('svg');
	font-weight: normal;
	font-style: normal;
}


a
	color naranja
body
	background #E8E8E8
	color gris_oscuro
	font-family Arial
	font-size 16px

footer
	background naranja
	color rgba(255,255,255,0.5)
	text-align center
	padding 1em 0
	bottom 0
	width 100%

	h3
		font-size 14px
		font-weight normal

		strong
			display block
header
	background gris_oscuro
	box-shadow 0 5px 0 rgba(0,0,0, 0.2)
	color white
	padding 0.5em
	position relative
	overflow hidden
	z-index 1

	.logo
		border-right 1px solid azul
		float left
		width 60px

		img
			width 52px
	.titular
		margin 0 60px 0 70px

		.filtro
			color azul
			font-size 14px
			font-weight bold
			font-style italic
			text-decoration none

		.publicar
			background naranja
			color white
			float right
			margin -3px 1em 0 0
			padding 0.2em 0.5em
			text-decoration none
			font-style italic
			text-shadow 1px 1px 0px black
			&:before
				display inline-block
				font-family "iconitos"
				content "\e600"
				margin 0 3px 0 0
		.titulo
			font-size 18px
			font-weight normal
			margin 0
			padding 0
	.usuario
		position absolute
		right 10px
		top 10px
		.avatar
			margin 0 1.1em 0 0
			position relative
			z-index 2
			img
				width 50px
				border-radius 50%
		.flechita
			position absolute
			width 50%
			padding 2px
			top 15px
			right 0
			background naranja
			text-decoration none
			display block
			color white
			text-align right

			&:after
				display inline-block
				margin 0
				font-family "iconitos"
				content "\e602"
				text-shadow 1px 1px 0px black
nav
	background azul
	border-left 15px solid white
	position relative

	&:before
		border-left 7px solid white
		border-top 20px solid azul
		border-bottom 20px solid azul
		position absolute
		left 0
		top 0
		content ""

	.menu
		height 40px
		line-height 40px
		overflow-x auto 
		overflow-y hidden
		margin 0
		padding 0
		text-align left
		white-space nowrap
		li
			display inline-block

			a
				margin 0 0.5em
				padding 0.2em
				display inline-block
				color white
				text-decoration none

				

.posts
	padding 0.5em

	.post
		background white
		color gris_texto
		box-shadow 2px 2px 10px rgba(black,0.5)
		border-radius 0 0 0.5em 0.5em
		margin-bottom 1em

		.acciones
			border-top 3px solid azul
			padding 0.5em
			overflow hidden

			.datos
				float right
				.comentarios
					background gris_oscuro
					border-radius 3px
					color white
					margin 0 1em 0 0
					padding 2px 5px
					text-decoration none

				.estrellita
					text-decoration none
					color #E0D561
					&:after
						
						font-family "iconitos"
						content "\e601"
						


			.votos
				float left

				.up
				.down
					text-decoration none

				.down
					color red
					&:before
						font-family "iconitos"
						font-size 1.5em
						content "\e602"
						vertical-align bottom
				.up
					color green
					&:before
						font-family "iconitos"
						font-size 1.5em
						content "\e603"
						vertical-align bottom

		.descripcion
			color gris_texto

			.detalles
				height 160px
				margin-left 215px

				.autor
					margin 0.5em 0 2em 0

				.fecha
					float right
					margin 0 1em 0 0
				.tag
					background azul
					border-radius 0.5em
					color white
					padding 0.2em 0.5em
					text-decoration none
				.titulo
					color gris_oscuro
					font-size 18px
					font-style italic
					margin 0
					padding 0.5em 0.5em 0 0

			.imagen
				img
					float left
					height 160px
					width 120px
					vertical-align top


@media screen and (min-width: 768px)

	body 
		background red
	.posts
		.post 
			display inline-block
			width 48%
			vertical-align top